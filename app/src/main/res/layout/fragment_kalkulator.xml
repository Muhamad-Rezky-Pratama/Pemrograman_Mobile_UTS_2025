<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:gravity="end"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <Button
        android:id="@+id/btn_clear"
        android:text="C"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_square"/>

    <Button
        android:id="@+id/btn_square"
        android:text="x²"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toEndOf="@+id/btn_clear"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_sqrt"/>

    <Button
        android:id="@+id/btn_sqrt"
        android:text="√"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toEndOf="@+id/btn_square"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_divide"/>

    <Button
        android:id="@+id/btn_divide"
        android:text="/"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintStart_toEndOf="@+id/btn_sqrt"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_7"
        android:text="7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_8"/>

    <Button
        android:id="@+id/btn_8"
        android:text="8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_9"/>

    <Button
        android:id="@+id/btn_9"
        android:text="9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_multiply"/>

    <Button
        android:id="@+id/btn_multiply"
        android:text="*"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_4"
        android:text="4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_5"/>

    <Button
        android:id="@+id/btn_5"
        android:text="5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_6"/>

    <Button
        android:id="@+id/btn_6"
        android:text="6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_minus"/>

    <Button
        android:id="@+id/btn_minus"
        android:text="-"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_1"
        android:text="1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_2"/>

    <Button
        android:id="@+id/btn_2"
        android:text="2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_3"/>

    <Button
        android:id="@+id/btn_3"
        android:text="3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus"/>

    <Button
        android:id="@+id/btn_plus"
        android:text="+"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_0"
        android:text="0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintEnd_toStartOf="@+id/btn_dot"/>

    <Button
        android:id="@+id/btn_dot"
        android:text="."
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintStart_toEndOf="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_equal"/>

    <Button
        android:id="@+id/btn_equal"
        android:text="="
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="#CCCCCC"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintStart_toEndOf="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>